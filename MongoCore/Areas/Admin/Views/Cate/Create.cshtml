@model MongoCore.Models.ModelViews.CateM
@{
    Layout = "_Layout";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="nameCate">Tên danh mục</label>
        <input type="text" class="form-control" id="nameCate" name="nameCate" value="@Model?.nameCate" />
        <span class="text-danger">@Html.ValidationMessageFor(m => m.nameCate)</span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Thêm</button>
    <a href="/Admin/Cate" class="btn btn-secondary mt-2">Quay lại</a>

</form>

@section myscript {
@* Giữ nguyên phần này nếu bạn đã có trong layout *@
    <partial name="_ValidationScriptsPartial" />
}

