@model MongoCore.Models.ModelViews.UserM
@{
    ViewBag.Title = "Hồ sơ cá nhân";
    var roles = new List<string> { "Admin", "User" };
}

<div class="max-w-4xl mx-auto mt-10 p-8 bg-white dark:bg-gray-800 shadow-lg rounded-xl">
    <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-6">Cập nhật hồ sơ cá nhân</h2>

    <form asp-action="UpdateProfile" asp-controller="Profile" method="post" enctype="multipart/form-data" class="space-y-6">

        <input type="hidden" name="_id" value="@Model._id" />

        <div class="flex items-center space-x-6">
            <div class="shrink-0">
                <img class="h-24 w-24 object-cover rounded-full border-2 border-blue-400"
                     src="@Url.Content(string.IsNullOrEmpty(Model.Image) ? "~/images/noimage.png" : Model.Image)"
                     alt="Ảnh đại diện"
                     onerror="this.onerror=null;this.src='@Url.Content("~/images/noimage.png")';" />
            </div>
            <div>
                <label for="ImageFile" class="inline-block cursor-pointer px-4 py-2 bg-blue-600 text-white font-semibold text-sm rounded-lg shadow hover:bg-blue-700">
                    Đổi ảnh
                </label>
                <input type="file" id="ImageFile" name="ImageFile" accept="image/*" class="hidden" />
            </div>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-200">Tên người dùng</label>
            <input asp-for="nameUser" class="form-input mt-1 block w-full rounded-lg bg-gray-100 dark:bg-gray-700 border-none focus:ring-2 focus:ring-blue-500 dark:text-white" />
            <span asp-validation-for="nameUser" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-200">Email</label>
            <input asp-for="Email" class="form-input mt-1 block w-full rounded-lg bg-gray-100 dark:bg-gray-700 border-none focus:ring-2 focus:ring-blue-500 dark:text-white" />
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-200">Mật khẩu</label>
            <input asp-for="Password" type="password" class="form-input mt-1 block w-full rounded-lg bg-gray-100 dark:bg-gray-700 border-none focus:ring-2 focus:ring-blue-500 dark:text-white" />
            <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-200">Địa chỉ</label>
            <textarea asp-for="Address" rows="3" class="form-textarea mt-1 block w-full rounded-lg bg-gray-100 dark:bg-gray-700 border-none focus:ring-2 focus:ring-blue-500 dark:text-white"></textarea>
            <span asp-validation-for="Address" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-200">Số điện thoại</label>
            <input asp-for="Phone" class="form-input mt-1 block w-full rounded-lg bg-gray-100 dark:bg-gray-700 border-none focus:ring-2 focus:ring-blue-500 dark:text-white" />
            <span asp-validation-for="Phone" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-200">Quyền</label>
            <select asp-for="Role" class="form-select mt-1 block w-full rounded-lg bg-gray-100 dark:bg-gray-700 border-none focus:ring-2 focus:ring-blue-500 dark:text-white">
                @foreach (var role in roles)
                {
                        <option value="@role" selected="@(Model.Role == role ? "selected" : null)">@role</option>
                }
            </select>
            <span asp-validation-for="Role" class="text-red-500 text-sm"></span>
        </div>

        <div class="pt-4">
            <button type="submit" class="px-6 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700">
                Cập nhật thông tin
            </button>
        </div>
    </form>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
